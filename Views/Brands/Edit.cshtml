@model BlackEyesMvc.Models.Brand

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Brands", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Brand</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="editor-label">
            Enter Brand Name
        </div>
        <div class="editor-field">
            <input id="brandName" type="text" name="brandName" />
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="editor-label">
            Upload Image
        </div>
        <div class="editor-field">
            <input id="PhotoUrl" title="Upload a product image" type="file" name="file" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
