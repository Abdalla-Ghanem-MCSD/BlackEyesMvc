@model BlackEyesMvc.Models.Brand

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Brands", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Brand</h4>
        <hr />
        <div class="form-group">
            <div class="editor-label">
                Enter Brand Name
            </div>
            <div class="editor-field">
                <input id="brandName" type="text" name="brandName" />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="editor-label">
                Upload Brand Image
            </div>
            <div class="editor-field">
                <input id="PhotoUrl" title="Upload a brand image" type="file" name="file" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
